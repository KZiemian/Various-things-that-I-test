#!/usr/bin/python3




def wypisz_ile_zwrociles(lista, string_rok=None):
    if string_rok == None:
        print("Zwrociles za pirackie programy, filmy,gry,",
              "muzyke, PDF etc.,\n", "w sumie", round(sum(lista, 0.0), 2),
              "PLN.")
    else:
        print("Zwrociles za pirackie programy, filmy,gry,",
              "muzyke, PDF etc.,\n", "w roku {}:".format(string_rok),
              round(sum(lista, 0.0), 2), "PLN.")





